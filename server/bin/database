#!/bin/bash

# Stop on errors
set -e

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    if [ ! -f var/db.sqlite3 ]; then
      sqlite3 var/db.sqlite3 < sql/schema.sql
      sqlite3 var/db.sqlite3 < sql/data.sql
      echo "+ sqlite3 var/db.sqlite3 < sql/schema.sql"
      echo "+ sqlite3 var/db.sqlite3 < sql/data.sql "
    else
      echo "Error: database already exists"
    fi
    ;;

  "destroy")
    rm -rf var/db.sqlite3
    echo "+ rm -rf var/db.sqlite3"
    ;;

  "reset")
    rm -rf var/db.sqlite3
    sqlite3 var/db.sqlite3 < sql/schema.sql
    sqlite3 var/db.sqlite3 < sql/data.sql
    echo "+ rm -rf var/db.sqlite3"
    echo "+ sqlite3 var/db.sqlite3 < sql/schema.sql"
    echo "+ sqlite3 var/db.sqlite3 < sql/data.sql "
    ;;

  "dump")
  sqlite3 -batch -line var/db.sqlite3 'SELECT * FROM users'
  sqlite3 -batch -line var/db.sqlite3 'SELECT * FROM saved_items'
  ;;
  *)
    usage
    exit 1
    ;;
esac
